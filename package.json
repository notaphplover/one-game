{
  "author": "Multiple authors",
  "bugs": {
    "url": "https://github.com/notaphplover/one-game/issues"
  },
  "description": "One game",
  "devDependencies": {
    "@one-game-js/backend-jest-config": "workspace:./packages/backend-jest-config",
    "@one-game-js/backend-prettier-config": "workspace:./packages/backend-prettier-config",
    "@one-game-js/backend-scripts": "workspace:./packages/backend-scripts",
    "@one-game-js/backend-typescript-config": "workspace:./packages/backend-typescript-config",
    "@one-game-js/eslint-config-backend": "workspace:./packages/eslint-config-backend",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "turbo": "^1.6.3"
  },
  "homepage": "https://github.com/notaphplover/one-game#readme",
  "keywords": [
    "game"
  ],
  "license": "See license in \"LICENSE\" file",
  "name": "root",
  "packageManager": "pnpm@7.18.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/notaphplover/one-game.git"
  },
  "scripts": {
    "build:all": "turbo run build",
    "lint:all": "turbo run lint",
    "prepare": "husky install",
    "test:integration:js": "turbo test:integration:js",
    "test:js": "turbo run test:js",
    "test:js:coverage": "turbo run test:js:coverage",
    "test:uncommitted": "turbo run test:uncommitted --filter [HEAD]",
    "test:unit:js": "turbo run test:unit:js",
    "test": "turbo run test"
  }
}
