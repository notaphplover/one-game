{
  "author": "Multiple authors",
  "bugs": {
    "url": "https://github.com/notaphplover/one-game/issues"
  },
  "description": "One game",
  "devDependencies": {
    "@changesets/cli": "2.28.1",
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@commitlint/prompt-cli": "19.7.1",
    "@cornie-js/backend-eslint-config": "workspace:*",
    "@cornie-js/backend-jest-config": "workspace:*",
    "@cornie-js/backend-prettier-config": "workspace:*",
    "@cornie-js/backend-scripts": "workspace:*",
    "@cornie-js/backend-stryker-config": "workspace:*",
    "@cornie-js/backend-typescript-config": "workspace:*",
    "@cornie-js/frontend-eslint-config": "workspace:*",
    "@cornie-js/frontend-jest-config": "workspace:*",
    "@cornie-js/frontend-prettier-config": "workspace:*",
    "@cornie-js/frontend-typescript-config": "workspace:*",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "turbo": "2.4.4"
  },
  "homepage": "https://github.com/notaphplover/one-game#readme",
  "keywords": [
    "game"
  ],
  "license": "See license in \"LICENSE\" file",
  "name": "root",
  "packageManager": "pnpm@10.5.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/notaphplover/one-game.git"
  },
  "scripts": {
    "build": "turbo run build",
    "build:api:rest": "turbo run build --filter=@cornie-js/backend-service-user --filter=@cornie-js/backend-service-game",
    "build:api:graphql": "pnpm run build:api:rest --filter=@cornie-js/backend-service-gateway",
    "build:web": "turbo run build --filter=@cornie-js/web-ui",
    "close:e2e": "turbo run close:e2e",
    "commit": "commit",
    "docker:build:game": "docker build . -f ./docker/backend/Dockerfile --target backendservicegame --tag robertopintosl/one-game-backend-service-game:latest",
    "docker:build:game:consumer": "docker build . -f ./docker/backend/Dockerfile --target backendconsumergame --tag robertopintosl/one-game-backend-consumer-game:latest",
    "docker:build:game:consumer:npm": "docker build . -f ./docker/backend/Dockerfile --target npmbackendconsumergame --tag robertopintosl/one-game-backend-consumer-game:0.3.3 --tag robertopintosl/one-game-backend-consumer-game:0.3 --tag robertopintosl/one-game-backend-consumer-game:0 --tag robertopintosl/one-game-backend-consumer-game:latest",
    "docker:build:game:service:npm": "docker build . -f ./docker/backend/Dockerfile --target npmbackendservicegame --tag robertopintosl/one-game-backend-service-game:0.4.2 --tag robertopintosl/one-game-backend-service-game:0.4 --tag robertopintosl/one-game-backend-service-game:0 --tag robertopintosl/one-game-backend-service-game:latest",
    "docker:build:user": "docker build . -f ./docker/backend/Dockerfile --target backendserviceuser --tag robertopintosl/one-game-backend-service-user:latest",
    "docker:build:user:service:npm": "docker build . -f ./docker/backend/Dockerfile --target npmbackendserviceuser --tag robertopintosl/one-game-backend-service-user:0.4.1 --tag robertopintosl/one-game-backend-service-user:0.4 --tag robertopintosl/one-game-backend-service-user:0 --tag robertopintosl/one-game-backend-service-user:latest",
    "docker:build:web-ui": "docker build . -f ./docker/frontend/Dockerfile --target frontendservicewebui --tag robertopintosl/one-game-frontend-service-web-ui:latest",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "migrations:run": "turbo run migrations:run",
    "prepare": "husky && turbo telemetry disable",
    "prerelease": "pnpm run build",
    "preserve:api:rest:dependencies": "./docker/scripts/bootstrap",
    "prestart:e2e": "./docker/scripts/bootstrap",
    "release": "changeset publish",
    "serve": "trap '' INT TERM; turbo run serve --concurrency=9000",
    "serve:api:graphql": "pnpm run serve:api:rest --filter=@cornie-js/backend-service-gateway",
    "serve:api:rest": "pnpm run serve:api:rest:dependencies --filter=@cornie-js/backend-consumer-game --filter=@cornie-js/backend-service-user --filter=@cornie-js/backend-service-game",
    "serve:api:rest:dependencies": "pnpm run serve --filter=@cornie-js/backend-maildev --filter=@cornie-js/backend-dev-apache-pulsar --filter=@cornie-js/backend-dev-redis-pub-sub --filter=@cornie-js/backend-dev-user-db --filter=@cornie-js/backend-dev-game-db --filter=@cornie-js/backend-dev-proxy",
    "serve:api:rest:docker": "turbo run serve:docker --filter=@cornie-js/backend-service-user --filter=@cornie-js/backend-service-game",
    "serve:api:rest:docs": "pnpm run serve --filter=@cornie-js/backend-dev-swagger-ui",
    "serve:grafana": "pnpm run serve --filter=@cornie-js/backend-dev-grafana",
    "start:e2e": "turbo run start:e2e",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:js": "turbo run test:e2e:js",
    "test:integration:js": "turbo test:integration:js",
    "test:js": "turbo run test:js",
    "test:js:coverage": "turbo run test:js:coverage",
    "test:mutation": "turbo run test:mutation --concurrency=25%",
    "test:uncommitted": "turbo run test:uncommitted --filter [HEAD]",
    "test:unit:js": "turbo run test:unit:js",
    "test": "turbo run test"
  }
}
