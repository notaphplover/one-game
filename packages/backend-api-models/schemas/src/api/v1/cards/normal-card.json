{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "http://onegame.schemas/api/v1/cards/normal-card.json",
  "title": "NormalCardV1",
  "allOf": [
    { "$ref": "http://onegame.schemas/api/v1/cards/colored-card.json" },
    {
      "type": "object",
      "properties": {
        "kind": {
          "const": "normal",
          "type": "string"
        },
        "number": {
          "$ref": "http://onegame.schemas/api/v1/cards/card-number.json"
        }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "color": {},
        "kind": {},
        "number": {}
      },
      "required": ["color", "kind", "number"]
    }
  ]
}
