#!/bin/bash

pnpm exec dotenv -- bash -c 'docker run \
  -e ONE_JS_GAME_SERVICE_DOT_ENV_ENABLED=false \
  -e ONE_JS_GAME_API_BACKEND_SERVICE_SECRET="$ONE_JS_GAME_API_BACKEND_SERVICE_SECRET" \
  -e ONE_JS_GAME_API_BASE_URL="$ONE_JS_GAME_API_BASE_URL" \
  -e ONE_JS_GAME_CONSUMER_HOST="$ONE_JS_GAME_CONSUMER_HOST" \
  -e ONE_JS_GAME_CONSUMER_PORT="$ONE_JS_GAME_CONSUMER_PORT" \
  -e ONE_JS_GAME_FRONTEND_BASE_URL="$ONE_JS_GAME_FRONTEND_BASE_URL" \
  -e ONE_JS_GAME_SERVICE_CORS_ORIGINS="$ONE_JS_GAME_SERVICE_CORS_ORIGINS" \
  -e ONE_JS_GAME_SERVICE_GRAFANA_PYROSCOPE_ENABLED="$ONE_JS_GAME_SERVICE_GRAFANA_PYROSCOPE_ENABLED" \
  -e ONE_JS_GAME_SERVICE_GRAFANA_PYROSCOPE_URL="$ONE_JS_GAME_SERVICE_GRAFANA_PYROSCOPE_URL" \
  -e ONE_JS_GAME_SERVICE_GRAFANA_TRACE_ENABLED="$ONE_JS_GAME_SERVICE_GRAFANA_TRACE_ENABLED" \
  -e ONE_JS_GAME_SERVICE_GRAFANA_TRACE_URL="$ONE_JS_GAME_SERVICE_GRAFANA_TRACE_URL" \
  -e ONE_JS_GAME_SERVICE_JWT_ALGORITHM="$ONE_JS_GAME_SERVICE_JWT_ALGORITHM" \
  -e ONE_JS_GAME_SERVICE_JWT_AUDIENCE="$ONE_JS_GAME_SERVICE_JWT_AUDIENCE" \
  -e ONE_JS_GAME_SERVICE_JWT_EXPIRATION_MS="$ONE_JS_GAME_SERVICE_JWT_EXPIRATION_MS" \
  -e ONE_JS_GAME_SERVICE_JWT_ISSUER="$ONE_JS_GAME_SERVICE_JWT_ISSUER" \
  -e ONE_JS_GAME_SERVICE_JWT_PRIVATE_KEY="$ONE_JS_GAME_SERVICE_JWT_PRIVATE_KEY" \
  -e ONE_JS_GAME_SERVICE_JWT_PUBLIC_KEY="$ONE_JS_GAME_SERVICE_JWT_PUBLIC_KEY" \
  -e ONE_JS_GAME_SERVICE_HOST="$ONE_JS_GAME_SERVICE_HOST" \
  -e ONE_JS_GAME_SERVICE_PORT="$ONE_JS_GAME_SERVICE_PORT" \
  -e ONE_JS_GAME_SERVICE_PUB_SUB_REDIS_HOST="$ONE_JS_GAME_SERVICE_PUB_SUB_REDIS_HOST" \
  -e ONE_JS_GAME_SERVICE_PUB_SUB_REDIS_PORT="$ONE_JS_GAME_SERVICE_PUB_SUB_REDIS_PORT" \
  -e ONE_JS_GAME_SERVICE_PULSAR_GAME_TURN_SIGNAL_TOPIC_URL="$ONE_JS_GAME_SERVICE_PULSAR_GAME_TURN_SIGNAL_TOPIC_URL" \
  -e ONE_JS_GAME_SERVICE_PULSAR_SERVICE_URL="$ONE_JS_GAME_SERVICE_PULSAR_SERVICE_URL" \
  -e ONE_JS_GAME_SERVICE_TYPEORM_DATASOURCE_OPTIONS="$ONE_JS_GAME_SERVICE_TYPEORM_DATASOURCE_OPTIONS" \
  --network=host one-game-backend-consumer-game:latest'
