{
  "author": "Multiple authors",
  "bugs": {
    "url": "https://github.com/notaphplover/one-game/issues"
  },
  "description": "Backend game service for one-game-js",
  "dependencies": {
    "@fastify/helmet": "10.1.0",
    "@nestjs/common": "9.4.0",
    "@nestjs/core": "9.4.0",
    "@nestjs/platform-fastify": "9.4.0",
    "@nestjs/typeorm": "9.0.1",
    "@one-game-js/api-http-client": "workspace:*",
    "@one-game-js/api-models": "workspace:*",
    "@one-game-js/backend-api-validators": "workspace:*",
    "@one-game-js/backend-common": "workspace:*",
    "@one-game-js/backend-db": "workspace:*",
    "@one-game-js/backend-env": "workspace:*",
    "@one-game-js/backend-http": "workspace:*",
    "@one-game-js/backend-jwt": "workspace:*",
    "envalid": "7.3.1",
    "fastify": "4.17.0",
    "pg": "8.10.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "typeorm": "0.3.15"
  },
  "devDependencies": {
    "@jest/globals": "29.5.0",
    "@types/node": "18.16.2",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "eslint": "8.39.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "homepage": "https://github.com/notaphplover/one-game#readme",
  "license": "See license in \"LICENSE\" file",
  "name": "@one-game-js/backend-service-game",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/notaphplover/one-game.git"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "build:clean": "rimraf lib",
    "docker:services:start": "docker compose --env-file=docker.env up -d",
    "docker:services:stop": "docker compose --env-file=docker.env down",
    "format": "prettier --write ./src/**/*.ts",
    "lint": "eslint --ext ts --ignore-path .gitignore ./src",
    "migrations:generate": "node ./scripts/generateMigration.mjs",
    "migrations:revert": "typeorm migration:revert -d lib/app/adapter/nest/scripts/provideTypeOrmDatasource.js",
    "migrations:run": "typeorm migration:run -d lib/app/adapter/nest/scripts/provideTypeOrmDatasource.js",
    "postserve": "pnpm run docker:services:stop",
    "postserve:ts": "pnpm run docker:services:stop",
    "prebuild": "pnpm run build:clean",
    "preserve": "pnpm run docker:services:start",
    "preserve:ts": "pnpm run docker:services:start",
    "serve": "trap '' INT TERM; node lib/app/adapter/nest/scripts/bootstrap.js",
    "serve:ts": "trap '' INT TERM; ts-node src/app/adapter/nest/scripts/bootstrap.ts",
    "test": "jest --config=jest.config.mjs --runInBand",
    "test:integration:js": "pnpm run test:js --selectProjects Integration",
    "test:js": "jest --config=jest.js.config.mjs --runInBand",
    "test:js:coverage": "pnpm run test:js --coverage",
    "test:uncommitted": "pnpm run test --changedSince=HEAD",
    "test:unit:js": "pnpm run test:js --selectProjects Unit"
  },
  "version": "0.1.0"
}
